<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutFriendItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@drawable/background_1">

    <TextView
        android:id="@+id/usernameUserItemFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textColor="@color/colorTextParams"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/profPicUserItemFriend"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstLastNameUserItemFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="@color/colorTabTitle"
        app:layout_constraintStart_toEndOf="@+id/profPicUserItemFriend"
        app:layout_constraintTop_toBottomOf="@+id/usernameUserItemFriend" />

    <TextView
        android:id="@+id/profPicUserItemFriend"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/background_prof_img"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorTextParams"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/removeBtnFriendItem"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@drawable/remove_friend_buttonshape"
        android:fontFamily="@font/anton"
        android:text="@string/removeFriendBtn"
        android:textColor="@color/colorTextParams"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.917"
        app:layout_constraintStart_toEndOf="@+id/usernameUserItemFriend"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>