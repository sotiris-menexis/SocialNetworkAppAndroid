<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutFriendRequestItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@drawable/background_1"
    android:padding="10dp">

    <Button
        android:id="@+id/acceptBtnFriendReq"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/accept_buttonshape"
        android:text="@string/acceptTxt"
        android:textColor="@color/colorTabTitle"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/declineBtnFriendReq"
        app:layout_constraintTop_toBottomOf="@+id/usernameUserItemFriendReq"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/declineBtnFriendReq"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/decline_buttonshape"
        android:text="@string/declineTxt"
        android:textColor="@color/colorTabTitle"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameUserItemFriendReq" />

    <TextView
        android:id="@+id/profPicUserItemFriendReq"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/background_prof_img"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/colorTextParams"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameUserItemFriendReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:inputType="textMultiLine"
        android:text="TextView"
        android:textColor="@color/colorTextParams"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/profPicUserItemFriendReq"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>